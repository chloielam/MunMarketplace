NODE_ENV=development
ENABLE_TEST_SUPPORT=true

# API configuration
PORT=3000

# Database configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=mun_user
DB_PASS=mun_pass
DB_NAME=mun_marketplace

# Authentication
JWT_SECRET=change-me
JWT_EXPIRES_IN=1h

# OTP settings
OTP_TTL_MINUTES=10
MAX_OTPS_PER_HOUR=10

# Session cookies
SESSION_SECRET=replace-with-strong-secret
SESSION_TTL_MS=604800000
SESSION_COOKIE_NAME=mun.sid
SESSION_SAME_SITE=lax

# CORS / frontend origin
CORS_ORIGIN=http://localhost:5173
FRONTEND_ORIGIN=http://localhost:5173

# Email (leave blank for console logging in dev)
GMAIL_USER=
GMAIL_PASS=
